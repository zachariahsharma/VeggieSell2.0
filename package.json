{
  "name": "veggie-sell",
  "productName": "VeggieSell",
  "version": "1.0.0",
  "description": "A quick and easy way to sell your produce to your local area",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=false --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"APP NAME\"",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=false --out=release-builds"
  },
  "keywords": [
    "Electron"
  ],
  "author": "Zachariah Sharma",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.0.0",
    "electron-packager": "^14.2.1",
    "nodemon": "^2.0.3"
  },
  "dependencies": {
    "electron-log": "^4.1.2",
    "nodemailer": "^6.4.11",
    "python-shell": "^2.0.1"
  }
}
